{
  "name": "pm2-notify",
  "version": "1.0.0",
  "description": "Error log email notifier for PM2",
  "private": true,
  "type": "module",
  "main": "dist/app",
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint --ext .ts .",
    "build": "rimraf dist && tsc",
    "prestart": "npm run lint && npm run build",
    "start": "node dist/app",
    "pm2:start": "NODE_ENV=production pm2 start dist/app.js --name pm2-notify --no-pmx --log-date-format 'YYYY-MM-DD HH:mm:ss'",
    "pm2:delete": "pm2 delete pm2-notify"
  },
  "dependencies": {
    "dotenv": "^16.0.1",
    "handlebars": "^4.7.7",
    "he": "^1.2.0",
    "mjml": "^4.13.0",
    "nodemailer": "^6.7.8",
    "pm2": "^5.2.0"
  },
  "devDependencies": {
    "@types/he": "^1.1.2",
    "@types/mjml": "^4.7.0",
    "@types/node": "^16.11.56",
    "@types/nodemailer": "^6.4.5",
    "@typescript-eslint/eslint-plugin": "^5.35.1",
    "@typescript-eslint/parser": "^5.35.1",
    "eslint": "^8.22.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-sonarjs": "^0.15.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.7.4"
  },
  "license": "MIT"
}
