{
  "name": "pm2-notify",
  "version": "1.0.0",
  "description": "Error log email notifier for PM2",
  "license": "MIT",
  "private": true,
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint --ext .ts .",
    "build": "rimraf dist && tsc",
    "prestart": "npm run lint && npm run build",
    "start": "node dist/app",
    "pm2:start": "NODE_ENV=production pm2 start dist/app.js --name pm2-notify --no-pmx --log-date-format 'YYYY-MM-DD HH:mm:ss'",
    "pm2:delete": "pm2 delete pm2-notify"
  },
  "dependencies": {
    "dotenv": "^10.0.0",
    "handlebars": "^4.7.7",
    "he": "^1.2.0",
    "mjml": "^4.10.2",
    "nodemailer": "^6.6.3",
    "pm2": "^5.1.0"
  },
  "devDependencies": {
    "@types/he": "^1.1.2",
    "@types/mjml": "^4.7.0",
    "@types/node": "^16.6.2",
    "@types/nodemailer": "^6.4.4",
    "@typescript-eslint/eslint-plugin": "^4.29.2",
    "@typescript-eslint/parser": "^4.29.2",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-plugin-import": "^2.24.0",
    "eslint-plugin-sonarjs": "^0.10.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.3.5"
  }
}
