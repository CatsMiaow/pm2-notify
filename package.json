{
  "name": "pm2-notify",
  "version": "1.0.0",
  "description": "Error log email notifier for PM2",
  "private": true,
  "type": "module",
  "main": "dist/app",
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint --ext .ts .",
    "build": "del-cli dist && tsc",
    "prestart": "npm run lint && npm run build",
    "start": "node dist/app",
    "pm2:start": "NODE_ENV=production pm2 start dist/app.js --name pm2-notify --no-pmx --log-date-format 'YYYY-MM-DD HH:mm:ss'",
    "pm2:delete": "pm2 delete pm2-notify"
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "handlebars": "^4.7.7",
    "he": "^1.2.0",
    "mjml": "^4.14.1",
    "nodemailer": "^6.9.3",
    "pm2": "^5.3.0"
  },
  "devDependencies": {
    "@types/he": "^1.2.0",
    "@types/mjml": "^4.7.1",
    "@types/node": "^18.16.18",
    "@types/nodemailer": "^6.4.8",
    "@typescript-eslint/eslint-plugin": "^5.60.1",
    "@typescript-eslint/parser": "^5.60.1",
    "del-cli": "^5.0.0",
    "eslint": "^8.43.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-sonarjs": "^0.19.0",
    "typescript": "~5.0.4"
  },
  "license": "MIT"
}
